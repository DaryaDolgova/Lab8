#include <iostream>

using namespace std;

int main()
{ 
    setlocale(LC_CTYPE, "Russian");
int n,a,b,c,v;
cout<<"N= "; cin>>n;
a=0; b=0; c=0; v=n;
a=n%10; 
n=n/10;
b=n%10;
c=n/10;
if (a==0&b==0&c==0) {cout<<"нулевое число"<<endl;}
if (v>0&a!=0&b==0&c==0&a%2==0) {cout<<"однозначное положительное чётное"<<endl;}
if (v<0&a!=0&b==0&c==0&a%2==0) {cout<<"однозначное отрицательное чётное"<<endl;}
if (v>0&a!=0&b==0&c==0&a%2!=0) {cout<<"однозначное положительное нечётное"<<endl;}
if (v<0&a!=0&b==0&c==0&a%2!=0) {cout<<"однозначное отрицательное нечётное"<<endl;}
if (v>0&b!=0&c==0&a%2==0) {cout<<"двузначное положительное чётное"<<endl;}
if (v<0&b!=0&c==0&a%2==0) {cout<<"двузначное отрицательное чётное"<<endl;}
if (v>0&b!=0&c==0&a%2!=0) {cout<<"двузначное положительное нечётное"<<endl;}
if (v>0&b!=0&c==0&a%2!=0) {cout<<"двузначное отрицательное нечётное"<<endl;}
if (v>0&c!=0&a%2==0) {cout<<"трёхзначное положительное чётное"<<endl;}
if (v<0&c!=0&a%2==0) {cout<<"трёхзначное отрицательное чётное"<<endl;}
if (v>0&c!=0&a%2!=0) {cout<<"трёхзначное положительное нечётное"<<endl;}
if (v<0&c!=0&a%2!=0) {cout<<"трёхзначное отрицательное нечётное"<<endl;}
return 0;
} 
