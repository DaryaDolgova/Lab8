#include <iostream>

using namespace std;

int main()
{ 
    setlocale(LC_CTYPE, "Russian");
int n;
cout<<"N= "; cin>>n;
if (n>0&n%2==0) {cout<<"положительное чётное число"<<endl;}
if (n>0&n%2!=0) {cout<<"положительное нечётное число"<<endl;}
if (n==0) {cout<<"нулевое число"<<endl;}
if (n<0&n%2==0) {cout<<"отрицательное чётное число"<<endl;}
if (n<0&n%2!=0) {cout<<"отрицательное нечётное число"<<endl;}
return 0;
} 
